<h1>Announcement</h1>

<p><strong>Status: </strong><%= @announcement.status.upcase %></p>

<h3><%= @announcement.title %></h3>
<p><%= @announcement.description %></p>

<br>

<% if current_user.receptionist? || current_user.admin? || current_user.owner? %>
  <% if @announcement.published? %>
    <%= link_to 'Edit', edit_announcement_path(@announcement) %>
    <%= button_to 'Archived', archive_announcement_path(@announcement) %>
  <% end %>

  <% if @announcement.archived? %>
    <%= button_to 'Re-Publish', republish_announcement_path(@announcement) %>
  <% end %>
<% end %>


<%= link_to 'Back', announcements_path %>