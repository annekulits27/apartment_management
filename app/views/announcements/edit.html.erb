<h1>Edit Announcement</h1>

<%= form_with model: @announcement, url: announcement_path, method: :patch do |f| %>

  <div>
    <% if @announcement.errors.any? %>
      <ul>
        <% @announcement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      /ul>
    <% end %>
  </div>

  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title, value: @announcement.title %>
  </div>

  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description, value: @announcement.description, :cols => 30, :rows => 10 %>
  </div>

  <div>
    <%= f.submit 'Publish' %>
    <%= f.submit 'Save as Draft' %>
  </div>

<% end %>