<h1>Announcements</h1>

<% if @announcements.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.title %></td>
        <td><%= announcement.description %></td>
        <td><%= link_to 'View', announcement_path(announcement) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p><em>No announcement found</em></p>
<% end %>

<br>

<% if !current_user.tenant? %>
  <%= link_to 'Add Announcement', new_announcement_path %>
<% end %>

<br><br>
<%= link_to 'Back', authenticated_root_path %>