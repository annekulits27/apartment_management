<h1>Expenses</h1>

<% if @expenses.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.title %></td>
        <td><%= expense.description %></td>
        <td><%= expense.amount %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>No expenses found</h3>
<% end %>