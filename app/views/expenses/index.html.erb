<h1>Expenses</h1>

<% if @expenses.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Processed By</th>
        <th>Proof</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.title %></td>
        <td><%= expense.description %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.processed_by %></td>
        
        <% if expense.proof.attached? %>
          <td><%= image_tag expense.proof, width: "50px"  %></td>
        <% else %>
          <td>NA</td>
        <% end %>
        
        <td><%= link_to 'View', expense_path(expense) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>No expenses found</h3>
<% end %>

<br>
<br>
<%= link_to 'Add Expense', new_expense_path %>
<br>
<%= link_to 'Back', authenticated_root_path %>
