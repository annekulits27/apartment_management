<h1>Room <%= @room.room_code.upcase %></h1>

<h3>Monthly Rate: <%= @room.monthly_rate %></h3>
<h3>Current Number of Occupants: <%= @room.occupants_count %></h3>
<h3>Room Capacity: <%= @room.capacity_count %></h3>
<h3>Available Space: <%= @room.available_count %></h3>

<hr>
<h2>Tenants</h2>
<% if @tenants.any? %>
  <table>
    <thead>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
    </thead>
    <tbody>
      <% @tenants.each do |tenant| %>
        <tr>
          <td><%= tenant.email %></td>
          <td><%= tenant.first_name %></td>
          <td><%= tenant.last_name %></td>
          <td><%= link_to 'Profile', user_path(tenant) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p><em>No Tenants are currently occupying this room</em></p>
<% end %>

