<h1>Invoice <%= @invoice.id %></h1>

<p><strong>Status: </strong><%= @invoice.status.upcase %></p>
<p><strong>Tenant: </strong><%= @invoice.booking.user.email %></p>
<p><strong>Date From: </strong><%= @invoice.date_from %></p>
<p><strong>Date To: </strong><%= @invoice.date_to %></p>
<p><strong>Water Bill: </strong><%= @invoice.water_bill %></p>
<p><strong>Electricity Bill: </strong><%= @invoice.electricity_bill %></p>
<p><strong>Room Rate: </strong><%= @invoice.room_rate %></p>
<p><strong>Total Amount: </strong><%= @invoice.total_amount %></p>
<p><strong>Remarks: </strong><%= @invoice.remarks %></p>

<br>

<% if !@invoice.payment.present? %>
  <%= link_to 'Pay', new_invoice_payment_path({:invoice_id => @invoice.id, :amount => @invoice.total_amount}) %>
  <br>
<% else %>
  <%= link_to 'Payment Details', payment_path(@invoice.payment) %>
<% end %>


<br>

<%= link_to 'Back', invoices_path %>