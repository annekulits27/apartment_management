<h1>Payments#index</h1>
<p>Find me in app/views/payments/index.html.erb</p>

<% if current_user.tenant? %>
  <h2>Payments Summary</h2>
  <% if @current_user_payments.any? %>
    <table>
      <thead>
        <th>Payment ID</th>
        <th>Status</th>
        <th>Payment Mode</th>
        <th>Total Amount</th>
        <th>Remarks</th>
      </thead>
      <tbody>
        <% @current_user_payments.each do |payment| %>
          <% invoice = Invoice.find(payment.invoice_id) %>
          <tr>
            <td><%= payment.id %></td>
            <td><%= payment.status.capitalize %></td>
            <td><%= payment.payment_mode.capitalize %></td>
            <td><%= payment.amount %></td>
            <td><%= payment.remarks %></td>
            <td><%= link_to 'View Details', payment_path(payment) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p><em>No Payment Found</em></p>
  <% end %>
<% end %>

<% if !current_user.tenant? %>
  <h2>Payments</h2>
  <%= search_form_for @q do |f| %>
    <%= f.search_field :processed_by_or_initiated_by_cont, placeholder: 'Search Payment' %>
    <%= f.submit  %>
    <%= link_to 'Clear', payments_path %>
  <% end %>
  <% if @payments.any? %>
    <table>
      <thead>
        <th>Payment ID</th>
        <th>Status</th>
        <th>Payment Mode</th>
        <th>Total Amount</th>
        <th>Initiated by:</th>
        <th>Processed by:</th>
        <th>Remarks</th>
      </thead>
      <tbody>
        <% @payments.each do |payment| %>
          <tr>
            <td><%= payment.id %></td>
            <td><%= payment.status.capitalize %></td>
            <td><%= payment.payment_mode.capitalize %></td>
            <td><%= payment.amount %></td>
            <td><%= payment.initiated_by %></td>
            <td><%= payment.processed_by %></td>
            <td><%= payment.remarks %></td>
            <td><%= link_to 'View Details', payment_path(payment) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p><em>No Payment Found</em></p>
  <% end %> 
<% end %>
