<h2 class="text-lg lg:text-xl font-bold mb-2">Close Ticket <%= @concern.id %>?</h2>

<%= form_with model: @concern, data:{turbo:false}, url: concern_path(@concern), method: :patch do |f| %>

  <% if @concern.errors.any? %>
    <div class="w-full p-2 rounded-lg mb-2 text-red-700 bg-red-300 font-medium text-sm">
      <% @concern.errors.full_messages.each do |error| %>
        <div><%= error %></div>
      <% end %>
    </div>
  <% end %>

  <%= f.hidden_field :status, value: 'closed' %>
  <div class="mb-4">
    <%= f.label :remarks, class: 'block font-medium mb-1' %>
    <%= f.text_area :remarks, :rows => 4, class: 'w-full blcok border border-gray-200 rounded-lg' %>
  </div>
  <div class="flex gap-2 items-center">
    <%= f.submit 'Close Ticket', class: 'py-2.5 px-4 text-sm font-medium text-center text-white bg-blue-700 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-800 hover:cursor-pointer' %>
    <%= link_to 'Cancel', concern_path(@concern), class: 'py-2.5 px-4 text-sm font-medium text-center text-white bg-blue-700 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-800 hover:cursor-pointer' %>
  </div>

<% end %>